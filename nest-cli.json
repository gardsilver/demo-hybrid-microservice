{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      "**/*protos",
      {
        "include": "../protos/",
        "outDir": "dist/protos/"
      }
    ],
    "watchAssets": true
  }
}
